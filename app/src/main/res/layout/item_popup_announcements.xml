<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="edu.csuft.chentao.utils.OperationUtil" />

        <variable
            name="announcement"
            type="edu.csuft.chentao.pojo.bean.LocalAnnouncement" />

        <variable
            name="itemPresenter"
            type="edu.csuft.chentao.controller.presenter.ItemPopupAnnouncementPresenter" />

        <variable
            name="presenter"
            type="edu.csuft.chentao.controller.presenter.ActivityMessagePresenter" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_popup_announcement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_popup_announcement_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/ic_close"
            android:onClick="@{()->presenter.doClickToCloseOrOpen()}" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_popup_announcement_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="@{announcement.title}"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_popup_announcement_name_and_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingMultiplier="1.2"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="@{OperationUtil.appendString(announcement.username,announcement.time)}"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <View
            style="@style/view_line_bottom"
            android:layout_height="2dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_popup_announcement_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingMultiplier="1.2"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="@{announcement.content}"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|end"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_popup_announcement_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ic_arrow_left"
                android:onClick="@{()->presenter.doClickToPrevious()}" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_popup_announcement_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ic_arrow_right"
                android:onClick="@{()->presenter.doClickToNext()}" />
        </LinearLayout>

    </LinearLayout>
</layout>