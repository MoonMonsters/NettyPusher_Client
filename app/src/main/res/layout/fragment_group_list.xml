<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.csuft.chentao.fragment.GroupListFragment">

    <data>

        <variable
            name="presenter"
            type="edu.csuft.chentao.controller.presenter.FragmentGroupListPresenter" />

        <variable
            name="adapter"
            type="edu.csuft.chentao.adapter.GroupListAdapter" />
    </data>

    <LinearLayout
        android:id="@+id/fragment_group_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_group_list_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:adapter="@{adapter}" />

    </LinearLayout>
</layout>