<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="RedDot">
        <attr name="rdRadius" format="dimension" />
        <attr name="rdTextColor" format="color" />
        <attr name="rdCircleColor" format="color" />
        <attr name="rdTextNumber" format="integer" />
        <attr name="rdTextSize" format="dimension" />
    </declare-styleable>

    <style name="FullScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
